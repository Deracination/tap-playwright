{
  "compilerOptions": {
    "target": "es2019",                                 
    "module": "CommonJS",                                
    "moduleResolution": "node",
    "declaration": true,
    "esModuleInterop": true,                          
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                 
    "skipLibCheck": true,
    "paths": {
        "@/*": [
            "./src/*"
        ]
    },
    "outDir": "./dist"
  },
  "include": [
    "./src"
  ]
}
